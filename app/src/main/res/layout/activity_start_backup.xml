<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:context="fieldlayout.skipmorrow.com.fieldlayout.StartActivity">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fieldimage"
            android:src="@drawable/field_with_end_zone"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">
            <TextView android:layout_width="100dip"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="Field Type:"/>

            <Spinner
                android:id="@+id/fieldtypedropdown"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:id="@+id/fieldproperties"
            android:singleLine="false"
            android:minLines="4"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Corners used to lay out field:"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:id="@+id/one_seven_eight_two"
            android:onClick="Btn1782Clicked"
            android:layout_gravity="center_horizontal"
            android:text="1 -> 7 -> 8 -> 2"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:id="@+id/two_eight_seven_one"
            android:onClick="Btn2871Clicked"
            android:layout_gravity="center_horizontal"
            android:text="2 -> 8 -> 7 -> 1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:id="@+id/three_five_six_four"
            android:onClick="Btn3564Clicked"
            android:layout_gravity="center_horizontal"
            android:text="3 -> 5 -> 6 -> 4"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/four_six_five_three"
            android:onClick="Btn4653Clicked"
            android:layout_gravity="center_horizontal"
            android:text="4 -> 6 -> 5 -> 3"/>

        <TextView android:id="@+id/gps_fix_quality"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Waiting for GPS fix..."/>

        <Button
            android:id="@+id/start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Start"
            android:enabled="false"
            android:onClick="StartButtonClicked"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_text"/>
    </LinearLayout>
</ScrollView>
